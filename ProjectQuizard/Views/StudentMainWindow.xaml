<Window x:Class="ProjectQuizard.Views.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjectQuizard.ViewModels"
        xmlns:helpers="clr-namespace:ProjectQuizard.Helpers"
        mc:Ignorable="d"
        Title="Quiz App - Học sinh" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:StudentViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <Grid>
                <Label Content="Quiz App - Học sinh" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="{Binding CurrentUser.FullName}" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="Đăng xuất" Style="{StaticResource ButtonStyle}" 
                            Command="{Binding LogoutCommand}" Background="Red" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- Tab 1: Danh sách Quiz -->
            <TabItem Header="Danh sách Quiz">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Content="Chọn quiz để bắt đầu làm bài:" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding AvailableQuizzes}" 
                             SelectedItem="{Binding SelectedQuiz}"
                             Style="{StaticResource ListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Subject.Name}" Foreground="Gray" FontSize="12"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Questions.Count, StringFormat='Số câu hỏi: {0}'}" 
                                                   FontSize="11" Foreground="DarkBlue"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="2" Content="Bắt đầu làm bài" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding StartQuizCommand}"
                            HorizontalAlignment="Center" Margin="10" Padding="20,10"/>
                </Grid>
            </TabItem>
            
            <!-- Tab 2: Làm bài Quiz -->
            <TabItem Header="Làm bài">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Question Header -->
                    <Border Grid.Row="0" Background="LightBlue" Padding="10">
                        <Grid>
                            <Label Content="{Binding CurrentQuiz.Title}" FontWeight="Bold" FontSize="16"/>
                            <Label Content="{Binding QuestionProgress}" HorizontalAlignment="Right" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    
                    <!-- Question Content -->
                    <ScrollViewer Grid.Row="1" Margin="20">
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentQuestion.Content}" FontSize="16" TextWrapping="Wrap" 
                                       Margin="0,0,0,20" FontWeight="Bold"/>
                            
                            <!-- Answer Options -->
                            <StackPanel x:Name="AnswerOptions">
                                <RadioButton x:Name="rbA" GroupName="answers" Margin="0,10" FontSize="14" 
                                             Content="A. Option A" Checked="RadioButton_Checked" Tag="A"/>
                                <RadioButton x:Name="rbB" GroupName="answers" Margin="0,10" FontSize="14" 
                                             Content="B. Option B" Checked="RadioButton_Checked" Tag="B"/>
                                <RadioButton x:Name="rbC" GroupName="answers" Margin="0,10" FontSize="14" 
                                             Content="C. Option C" Checked="RadioButton_Checked" Tag="C"/>
                                <RadioButton x:Name="rbD" GroupName="answers" Margin="0,10" FontSize="14" 
                                             Content="D. Option D" Checked="RadioButton_Checked" Tag="D"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Navigation Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                        <Button Content="Câu trước" Style="{StaticResource ButtonStyle}"
                                Command="{Binding PreviousQuestionCommand}" Width="100"/>
                        <Button Content="Câu tiếp" Style="{StaticResource ButtonStyle}"
                                Command="{Binding NextQuestionCommand}" Width="100"/>
                        <Button Content="Nộp bài" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SubmitQuizCommand}" Width="100" Background="Green"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Tab 3: Kết quả -->
            <TabItem Header="Kết quả">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Score Display -->
                    <Border Grid.Row="0" Background="LightGreen" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="KẾT QUẢ QUIZ" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LastResult.Quiz.Title}" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding LastResult.Score, StringFormat='Điểm: {0:F1}/100'}" 
                                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding LastResult.StudentAnswers.Count, StringFormat='Số câu đã trả lời: {0}'}" 
                                       FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Label Grid.Row="1" Content="Chi tiết câu trả lời:" FontWeight="Bold" FontSize="14"/>
                    
                    <!-- Detailed Results -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding LastAnswers}" Style="{StaticResource ListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="10">
                                    <StackPanel>
                                                                                 <TextBlock Text="{Binding Question.Content}" FontWeight="Bold" TextWrapping="Wrap"/>
                                         <TextBlock Text="{Binding SelectedOption, StringFormat='Đáp án đã chọn: {0}'}" Margin="0,5,0,0"/>
                                         <TextBlock Text="{Binding Question.CorrectOption, StringFormat='Đáp án đúng: {0}'}" 
                                                    Foreground="Green" Margin="0,2,0,0"/>
                                         <TextBlock Margin="0,2,0,0" FontWeight="Bold">
                                             <TextBlock.Style>
                                                 <Style TargetType="TextBlock">
                                                     <Style.Triggers>
                                                         <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                             <Setter Property="Text" Value="✓ Đúng"/>
                                                             <Setter Property="Foreground" Value="Green"/>
                                                         </DataTrigger>
                                                         <DataTrigger Binding="{Binding IsCorrect}" Value="False">
                                                             <Setter Property="Text" Value="✗ Sai"/>
                                                             <Setter Property="Foreground" Value="Red"/>
                                                         </DataTrigger>
                                                     </Style.Triggers>
                                                 </Style>
                                             </TextBlock.Style>
                                         </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="3" Content="Làm lại quiz" Style="{StaticResource ButtonStyle}"
                            Command="{Binding RetakeQuizCommand}" HorizontalAlignment="Center" Margin="10"/>
                </Grid>
            </TabItem>
            
            <!-- Tab 4: Lịch sử -->
            <TabItem Header="Lịch sử">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Content="Lịch sử làm bài:" FontWeight="Bold" FontSize="14"/>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding QuizHistory}" 
                              Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên Quiz" Binding="{Binding Quiz.Title}" Width="*"/>
                            <DataGridTextColumn Header="Môn học" Binding="{Binding Quiz.Subject.Name}" Width="150"/>
                            <DataGridTextColumn Header="Điểm" Binding="{Binding Score, StringFormat={}{0:F1}}" Width="80"/>
                            <DataGridTextColumn Header="Ngày làm" Binding="{Binding FinishedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="Black" Opacity="0.5" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <StackPanel Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
            <TextBlock Text="Đang tải..." Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>