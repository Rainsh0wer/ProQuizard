<Window x:Class="ProjectQuizard.Views.LoginRegister.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quizard - Login" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Branding -->
        <Grid Grid.Column="0" Background="#2D2D30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
                <TextBlock Text="Quizard" 
                          FontSize="48" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                <TextBlock Text="Learn, Quiz, Excel" 
                          FontSize="18" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Opacity="0.8"/>
                <TextBlock Text="Your ultimate quiz learning platform" 
                          FontSize="14" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Opacity="0.6"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" Margin="60">
                <TextBlock Text="Welcome Back!" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10"
                          Foreground="#2D2D30"/>
                <TextBlock Text="Sign in to your account" 
                          FontSize="14" 
                          Margin="0,0,0,40"
                          Opacity="0.6"/>

                <!-- Error Message -->
                <Border Background="#E57373" 
                       CornerRadius="4" 
                       Padding="15,10"
                       Margin="0,0,0,20"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                              Foreground="White" 
                              FontSize="12"/>
                </Border>

                <!-- Username Field -->
                <TextBox PlaceholderText="Username"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,20"
                        FontSize="16"/>

                <!-- Password Field -->
                <PasswordBox x:Name="PasswordBox"
                            Tag="Password"
                            Margin="0,0,0,30"
                            FontSize="16"/>

                <!-- Login Button -->
                <Button Content="Sign In"
                       Command="{Binding LoginCommand}"
                       Background="#2D2D30"
                       BorderBrush="#2D2D30"
                       Foreground="White"
                       Height="50"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       BorderThickness="1"
                       CornerRadius="25"/>

                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,0,20"/>

                <!-- Action Links -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Create Account"
                           Command="{Binding ShowRegisterCommand}"
                           Background="Transparent"
                           BorderBrush="Transparent"
                           Foreground="#2D2D30"
                           Margin="0,0,20,0"/>
                    <Button Content="Forgot Password?"
                           Command="{Binding ShowForgotPasswordCommand}"
                           Background="Transparent"
                           BorderBrush="Transparent"
                           Foreground="#2D2D30"
                           Opacity="0.6"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>