<Window x:Class="ProjectQuizard.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjectQuizard.ViewModels"
        mc:Ignorable="d"
        Title="Đăng nhập - Quiz App" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    
    <Grid Background="LightGray">
        <Border Background="White" CornerRadius="10" Margin="50" Padding="30">
            <StackPanel>
                <Label Content="ĐĂNG NHẬP" Style="{StaticResource TitleLabelStyle}" 
                       FontSize="24" Margin="0,0,0,30"/>
                
                <Label Content="Tên đăng nhập:" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource TextBoxStyle}"/>
                
                <Label Content="Mật khẩu:" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}"/>
                
                <Label Content="{Binding ErrorMessage}" Foreground="Red" 
                       Style="{StaticResource LabelStyle}" FontSize="10"/>
                
                <Button Content="Đăng nhập" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Margin="5,15,5,5"/>
                
                <Button Content="Đăng ký tài khoản mới" 
                        Style="{StaticResource ButtonStyle}"
                        Command="{Binding RegisterCommand}"
                        Margin="5"/>
                
                <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Height="5" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>