<Window x:Class="ProjectQuizard.Views.TeacherMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjectQuizard.ViewModels"
        mc:Ignorable="d"
        Title="Quiz App - Giáo viên" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:TeacherViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <Grid>
                <Label Content="Quiz App - Giáo viên" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="{Binding CurrentUser.FullName}" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="Đăng xuất" Style="{StaticResource ButtonStyle}" 
                            Command="{Binding LogoutCommand}" Background="Red" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- Tab 1: Danh sách Quiz của tôi -->
            <TabItem Header="Quiz của tôi">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Content="Danh sách quiz đã tạo:" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding MyQuizzes}" 
                             SelectedItem="{Binding SelectedQuiz}"
                             Style="{StaticResource ListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Subject.Name}" Foreground="Gray" FontSize="12"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Questions.Count, StringFormat='Số câu hỏi: {0}'}" 
                                                   FontSize="11" Foreground="DarkBlue"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='Tạo ngày: {0:dd/MM/yyyy}'}" 
                                                   FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Tạo quiz mới" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding CreateQuizCommand}" Margin="5"/>
                        <Button Content="Sửa" Style="{StaticResource ButtonStyle}"
                                Command="{Binding EditQuizCommand}" Margin="5"/>
                        <Button Content="Xóa" Style="{StaticResource ButtonStyle}"
                                Command="{Binding DeleteQuizCommand}" Margin="5" Background="Red" Foreground="White"/>
                        <Button Content="Xem thống kê" Style="{StaticResource ButtonStyle}"
                                Command="{Binding ViewStatisticsCommand}" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Tab 2: Tạo/Sửa Quiz -->
            <TabItem Header="Tạo/Sửa Quiz">
                <ScrollViewer Margin="20">
                    <StackPanel>
                        <Label Content="THÔNG TIN QUIZ" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        
                        <Label Content="Tên quiz: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding QuizTitle, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Mô tả:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding QuizDescription, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        
                        <Label Content="Môn học: *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Subjects}" 
                                  SelectedItem="{Binding SelectedSubject}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <Button Content="Lưu quiz" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SaveQuizCommand}" HorizontalAlignment="Left" Margin="5,15,5,5"/>
                        
                        <Separator Margin="0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Content="DANH SÁCH CÂU HỎI" FontWeight="Bold" FontSize="16"/>
                            <Button Grid.Column="1" Content="Thêm câu hỏi" Style="{StaticResource ButtonStyle}"
                                    Command="{Binding AddQuestionCommand}"/>
                        </Grid>
                        
                        <ListBox ItemsSource="{Binding CurrentQuestions}" 
                                 SelectedItem="{Binding SelectedQuestion}"
                                 Style="{StaticResource ListBoxStyle}" Height="200">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="2" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Content}" FontWeight="Bold" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding CorrectOption, StringFormat='Đáp án đúng: {0}'}" 
                                                           Foreground="Green" FontSize="11"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button Content="Sửa" Style="{StaticResource ButtonStyle}" 
                                                        Command="{Binding DataContext.EditQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}" Width="50" Height="25" Margin="2"/>
                                                <Button Content="Xóa" Style="{StaticResource ButtonStyle}" 
                                                        Command="{Binding DataContext.DeleteQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}" Width="50" Height="25" Margin="2"
                                                        Background="Red" Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 3: Tạo/Sửa Câu hỏi -->
            <TabItem Header="Tạo/Sửa Câu hỏi">
                <ScrollViewer Margin="20">
                    <StackPanel>
                        <Label Content="THÔNG TIN CÂU HỎI" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        
                        <Label Content="Nội dung câu hỏi: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding QuestionContent, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        
                        <Label Content="Đáp án A: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding OptionA, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Đáp án B: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding OptionB, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Đáp án C: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding OptionC, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Đáp án D: *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding OptionD, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Đáp án đúng: *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding CorrectOptions}" 
                                  SelectedItem="{Binding CorrectOption}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <Label Content="Giải thích (tùy chọn):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Explanation, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource TextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                        
                        <Button Content="Lưu câu hỏi" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SaveQuestionCommand}" HorizontalAlignment="Left" Margin="5,15,5,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Tab 4: Thống kê -->
            <TabItem Header="Thống kê">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Content="THỐNG KÊ QUIZ" FontWeight="Bold" FontSize="16"/>
                    
                    <Border Grid.Row="1" Background="LightBlue" Padding="15" CornerRadius="5" Margin="0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SelectedQuiz.Title, StringFormat='Quiz: {0}'}" 
                                       FontWeight="Bold" FontSize="14" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding QuizStatistics.Count, StringFormat='Số lượt làm: {0}'}" 
                                       FontSize="14" Margin="0,0,20,0"/>
                            <TextBlock Text="Điểm trung bình: Đang tính..." FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                    <DataGrid Grid.Row="2" ItemsSource="{Binding QuizStatistics}" 
                              Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Học sinh" Binding="{Binding Student.FullName}" Width="200"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding Student.Username}" Width="150"/>
                            <DataGridTextColumn Header="Điểm" Binding="{Binding Score, StringFormat={}{0:F1}}" Width="80"/>
                            <DataGridTextColumn Header="Bắt đầu" Binding="{Binding StartedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="120"/>
                            <DataGridTextColumn Header="Hoàn thành" Binding="{Binding FinishedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="Black" Opacity="0.5" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <StackPanel Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
            <TextBlock Text="Đang tải..." Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>